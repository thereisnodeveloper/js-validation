{
  "plugins": ["sonarjs"],
  "extends": ["airbnb-base", "plugin:n/recommended", "plugin:sonarjs/recommended-legacy", "plugin:unicorn/recommended"],


  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es2022": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "handle-callback-err": "error",
    "n/exports-style": ["error", "module.exports"],
			"unicorn/better-regex": "warn"
    // "indent": ["error", 4, {   "ignoreComments": true }],
  }
}
